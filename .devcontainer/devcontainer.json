{
    "name": "PHP, Node.js & MySQL",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "18"
        }
    },
    "forwardPorts": [8000, 5173, 3306],
    "portsAttributes": {
        "8000": {"label": "Laravel Backend"},
        "5173": {"label": "React Frontend"},
        "3306": {"label": "MySQL"}
    },
    "postCreateCommand": "sudo chown -R vscode:vscode . && composer install && (cd frontend && npm install)"
}
